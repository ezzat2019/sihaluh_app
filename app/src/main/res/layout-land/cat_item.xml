<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_7sdp"
    android:outlineAmbientShadowColor="@color/move"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginEnd="@dimen/_8sdp"

    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/v1_cat"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="@dimen/_280sdp"
        android:background="@color/light_gray2"

        android:layout_height="match_parent"
        android:padding="@dimen/_4sdp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_frag"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/stocks"
            android:layout_marginLeft="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@+id/v1_cat"
            app:layout_constraintStart_toStartOf="@+id/v1_cat"
            app:layout_constraintTop_toTopOf="@+id/v1_cat" />


        <TextView
            android:id="@+id/txt_cat_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:singleLine="true"
            android:text="named"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@+id/v1_cat"
            app:layout_constraintEnd_toEndOf="@+id/v1_cat"
            app:layout_constraintStart_toEndOf="@+id/img_user_frag"
            app:layout_constraintTop_toTopOf="@+id/v1_cat" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>